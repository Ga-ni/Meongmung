<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.androidtown.reeatgo.ladder">

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Random Mode"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#0066ff"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/randbt1"
            android:layout_weight="1"
            android:text="1"
            android:textColor="#000000"
            android:textSize="21sp"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/bt2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/randbt2"
            android:layout_weight="1"
            android:text="2"
            android:textColor="#000000"
            android:textSize="21sp"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/bt3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/randbt3"
            android:layout_weight="1"
            android:text="3"
            android:textColor="#000000"
            android:textSize="21sp"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/bt4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/randbt4"
            android:layout_weight="1"
            android:text="4"
            android:textColor="#000000"
            android:textSize="21sp"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/bt5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/randbt5"
            android:layout_weight="1"
            android:text="5"
            android:textColor="#000000"
            android:textSize="21sp"
            android:onClick="buttonClicked"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/sadariPart"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/simpson"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/scared"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:text="안녕"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="40sp"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/random_background"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        >

        <Button
            android:id="@+id/bt1"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:background="@drawable/randbt1"
            android:layout_weight="1"
            android:text="1"
            android:textColor="#00000000"
            android:textSize="21sp"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/bt2"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:background="@drawable/randbt2"
            android:layout_weight="1"
            android:text="2"
            android:textColor="#00000000"
            android:textSize="21sp"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/bt3"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:background="@drawable/randbt3"
            android:layout_weight="1"
            android:text="3"
            android:textColor="#00000000"
            android:textSize="21sp"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/bt4"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:background="@drawable/randbt4"
            android:layout_weight="1"
            android:text="4"
            android:textColor="#00000000"
            android:textSize="21sp"
            android:onClick="buttonClicked"/>

        <Button
            android:id="@+id/bt5"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:background="@drawable/randbt5"
            android:layout_weight="1"
            android:text="5"
            android:textColor="#00000000"
            android:textSize="21sp"
            android:onClick="buttonClicked"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/sadariPart"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"
        >

        <ImageView
            android:id="@+id/pumpkin"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:gravity="center_vertical|center_horizontal"
        android:paddingTop="20dp"
        android:textColor="#ffffff"
        android:textSize="40sp"
        android:onClick="foodNameClicked"/>

</LinearLayout>